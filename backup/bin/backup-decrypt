ETC=%%ETC%%

. ${ETC}/encrypt.conf || exit 1

file=${1}-${2}.gz

src=${ARCHIV}/${file}.gpg
trg=${RESTORE}/${file}

[ -f ${src} ] || exit 1

${GPG} -d \
${GPGOPTIONS} \
-o ${trg} < ${src}

