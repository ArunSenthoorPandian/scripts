## Type:        string
## Default:     ""
DEBUG=0

## Type:        yesno
## Default:     no
#
RUN_MYSQLBACKUP=yes

## Type:        string
## Default:     "localhost"
#
# The hostname of the MySQL server
#
MYSQL_HOST=localhost

## Type:        string
## Default:     "backup"
#
# The user to use for backup
# This user requires the following privileges:
# SELECT, RELOAD, SHOW VIEW, EVENT, LOCK TABLES
#
MYSQL_BACKUP_USER=backup

## Type:        string
## Default:     ""
#
# The password for the backup user
#
MYSQL_BACKUP_PASSWORD=pwd4backup

## Type:        string
## Default:     "/var/backup/mysql"
#
# The directory where to save the MySQL backup files
#
MYSQL_BACKUP_DIR=/var/backup/mysql

## Type:        string
## Default:     ""
#
# The directory where the MySQL databases are located
#
MYSQL_DATA_DIR=/var/lib/mysql

## Type:        integer
## Default:     14
#
# The number of days to keep MySQL backup files
#
MYSQL_KEEP_DAYS=14

## Type:        yesno
## Default:     yes
#
# Compress MySQL backup files
#
MYSQL_COMPRESS_BACKUP=yes

## Type:        string
## Default:     information_schema,performance_schema
#
# Comma separated list of databases excluded from backup
#
MYSQL_IGNORE_SCHEMA="information_schema,performance_schema"

## Type:        yesno
## Default:     no
#
# Use the MySQL hotcopy tool for backup
#
USE_MYSQL_HOTCOPY=no

## Type:        yesno
## Default:     no
#
# If this server is a replication server, set to yes to stop replication before
# starting backup and restart replication after finishing backup.
# This will increase speed during backup.
#
USE_MYSQL_REPLICATION=no

