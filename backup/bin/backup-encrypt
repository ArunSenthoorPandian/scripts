ETC=%%ETC%%

. ${ETC}/encrypt.conf || exit 1

for file in `${LS} ${UPLOAD}/*.gz`; do

    src=${file}
    trg=${file}.gpg
    [ -f ${src} ] || continue
    [ ! -f ${src}.gpg ] || continue
    ${GPG} -e \
    ${GPGOPTIONS} \
    -o ${trg} < ${src}
    ${RM} ${src}

done
